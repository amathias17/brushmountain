---
import navData from "../data/navData.json";
---

<header
  id="cs-navigation"
  class="fixed inset-x-0 top-0 z-[10000] bg-white shadow-sm"
>
  <div class="bg-gray-100">
    <div
      class="mx-auto flex w-full max-w-[80rem] items-center justify-between gap-4 px-6 py-4 md:px-4"
    >
      <div class="flex items-center gap-4 md:gap-6">
        <a
          href="#"
          class="flex items-center gap-2 text-sm text-body hover:underline"
        >
          <img
            class="h-4 w-4"
            src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/phone-grey.svg"
            alt="phone"
            width="16"
            height="16"
            aria-hidden="true"
            decoding="async"
          />
          Call us: +84 1985 33 999
        </a>
        <a
          href="#"
          class="hidden items-center gap-2 text-sm text-body hover:underline md:flex"
        >
          <img
            class="h-5 w-5"
            src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/clock-grey.svg"
            alt="hours"
            width="20"
            height="20"
            aria-hidden="true"
            decoding="async"
          />
          Opening hours: Mon - Sat: 8:00am To 9:00pm
        </a>
      </div>
      <div class="flex items-center gap-2 md:gap-4">
        <a href="#" class="transition hover:scale-110" aria-label="facebook">
          <img
            class="h-5 w-5"
            src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/face-grey.svg"
            alt="facebook"
            width="12"
            height="12"
            aria-hidden="true"
            decoding="async"
          />
        </a>
        <a href="#" class="transition hover:scale-110" aria-label="twitter">
          <img
            class="h-5 w-5"
            src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/twit-grey.svg"
            alt="twitter"
            width="12"
            height="12"
            aria-hidden="true"
            decoding="async"
          />
        </a>
        <a href="#" class="transition hover:scale-110" aria-label="instagram">
          <img
            class="h-5 w-5"
            src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/insta-grey.svg"
            alt="instagram"
            width="12"
            height="12"
            aria-hidden="true"
            decoding="async"
          />
        </a>
      </div>
    </div>
  </div>
  <div
    class="mx-auto flex w-full max-w-[80rem] items-center gap-6 px-4 py-6 lg:py-4"
  >
    <a href="/home" class="flex h-10 items-center lg:h-11" aria-label="back to home">
      <img
        src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Logos/consulting-logo.svg"
        alt="logo"
        width="197"
        height="43"
        aria-hidden="true"
        decoding="async"
        class="h-full w-auto object-contain"
      />
    </a>
    <nav class="relative ml-auto flex items-center" role="navigation">
      <button
        class="flex h-11 w-11 items-center justify-center bg-primary text-white transition-transform lg:hidden"
        data-nav-toggle
        type="button"
        aria-label="mobile menu toggle"
      >
        <span class="relative block h-3 w-6">
          <span
            class="absolute left-1/2 top-0 h-0.5 w-full -translate-x-1/2 rounded bg-white transition-all"
            data-line="top"
          ></span>
          <span
            class="absolute left-1/2 top-1/2 h-0.5 w-full -translate-x-1/2 -translate-y-1/2 rounded bg-white transition-all"
            data-line="middle"
          ></span>
          <span
            class="absolute left-1/2 bottom-0 h-0.5 w-full -translate-x-1/2 rounded bg-white transition-all"
            data-line="bottom"
          ></span>
        </span>
      </button>
      <div
        class="absolute left-0 top-full hidden w-full origin-top bg-white shadow-[inset_rgba(0,0,0,0.2)_0px_8px_24px] lg:static lg:block lg:w-auto lg:bg-transparent lg:shadow-none"
        data-nav-menu
      >
        <ul
          class="flex max-h-[65vh] flex-col items-center gap-5 overflow-y-auto py-12 lg:max-h-none lg:flex-row lg:gap-12 lg:overflow-visible lg:py-0"
        >
          {navData.map((item, index) =>
            item.children ? (
              <li class="group relative w-full text-center lg:w-auto" data-dropdown>
                <button
                  class="inline-flex items-center gap-2 text-[clamp(1rem,2.5vw,1.5rem)] leading-[1.2] text-header transition-colors hover:text-primary lg:text-[clamp(0.875rem,1.3vw,1rem)]"
                  type="button"
                  data-dropdown-toggle
                  aria-expanded="false"
                  aria-controls={`nav-dropdown-${index}`}
                >
                  <span>{item.name}</span>
                  <svg
                    class="h-3 w-3 text-body transition group-hover:text-primary"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    aria-hidden="true"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M5.23 7.21a.75.75 0 0 1 1.06.02L10 11.168l3.71-3.937a.75.75 0 1 1 1.08 1.04l-4.24 4.5a.75.75 0 0 1-1.08 0l-4.24-4.5a.75.75 0 0 1 .02-1.06Z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </button>
                <ul
                  id={`nav-dropdown-${index}`}
                  class="hidden w-full flex-col items-center gap-3 border border-white/20 bg-primary py-3 text-white lg:invisible lg:absolute lg:left-0 lg:top-full lg:z-10 lg:flex lg:min-w-[12.5rem] lg:origin-top lg:scale-y-0 lg:gap-0 lg:rounded-none lg:border lg:border-gray-200 lg:bg-white lg:py-0 lg:text-body lg:opacity-0 lg:shadow-[rgba(149,157,165,0.2)_0px_10px_16px] lg:transition-all lg:group-hover:visible lg:group-hover:scale-y-100 lg:group-hover:opacity-100"
                  data-dropdown-menu
                  aria-hidden="true"
                >
                  {item.children.map((child) => (
                    <li class="w-full">
                      <a
                        class="block w-full px-3 py-2 text-[clamp(0.875rem,2vw,1.25rem)] text-white transition-colors lg:text-base lg:text-body lg:hover:bg-gray-100 lg:hover:text-primary"
                        href={child.link}
                      >
                        {child.name}
                      </a>
                    </li>
                  ))}
                </ul>
              </li>
            ) : (
              <li class="w-full text-center lg:w-auto">
                <a
                  href={item.link}
                  class="inline-block text-[clamp(1rem,2.5vw,1.5rem)] leading-[1.2] text-header transition-colors hover:text-primary lg:text-[clamp(0.875rem,1.3vw,1rem)]"
                >
                  {item.name}
                </a>
              </li>
            )
          )}
        </ul>
      </div>
    </nav>
    <a
      href="/contact"
      class="relative hidden h-[2.875rem] items-center justify-center overflow-hidden bg-primary px-8 text-base font-bold text-white transition-colors before:absolute before:inset-y-0 before:left-0 before:w-0 before:bg-header before:transition-[width] before:duration-300 hover:before:w-full lg:inline-flex"
    >
      <span class="relative z-10">Contact Us</span>
    </a>
  </div>
</header>

<script>
  const navToggle = document.querySelector("[data-nav-toggle]");
  const navMenu = document.querySelector("[data-nav-menu]");
  const dropdownItems = document.querySelectorAll("[data-dropdown]");

  if (navToggle && navMenu) {
    navToggle.addEventListener("click", () => {
      const isHidden = navMenu.classList.contains("hidden");
      navMenu.classList.toggle("hidden");
      navMenu.classList.toggle("block", isHidden);
    });
  }

  const closeDropdown = (toggle, menu) => {
    menu.classList.add("hidden");
    menu.classList.remove("flex");
    menu.setAttribute("aria-hidden", "true");
    toggle.setAttribute("aria-expanded", "false");
  };

  const openDropdown = (toggle, menu) => {
    menu.classList.remove("hidden");
    menu.classList.add("flex");
    menu.setAttribute("aria-hidden", "false");
    toggle.setAttribute("aria-expanded", "true");
  };

  dropdownItems.forEach((item) => {
    const toggle = item.querySelector("[data-dropdown-toggle]");
    const menu = item.querySelector("[data-dropdown-menu]");

    if (!(toggle instanceof HTMLElement) || !(menu instanceof HTMLElement)) {
      return;
    }

    toggle.addEventListener("click", () => {
      if (window.innerWidth >= 1024) {
        return;
      }

      const isHidden = menu.classList.contains("hidden");

      dropdownItems.forEach((otherItem) => {
        const otherToggle = otherItem.querySelector("[data-dropdown-toggle]");
        const otherMenu = otherItem.querySelector("[data-dropdown-menu]");

        if (
          otherItem === item ||
          !(otherToggle instanceof HTMLElement) ||
          !(otherMenu instanceof HTMLElement)
        ) {
          return;
        }

        closeDropdown(otherToggle, otherMenu);
      });

      if (isHidden) {
        openDropdown(toggle, menu);
      } else {
        closeDropdown(toggle, menu);
      }
    });
  });
</script>
